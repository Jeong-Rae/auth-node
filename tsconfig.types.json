          "moduleResolution": "bundler",
          "declaration": true,
          "emitDeclarationOnly": true,
          "outDir": "dist/types",
          "stripInternal": true
     },
     "include": ["src/**/*.ts"],
     "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
